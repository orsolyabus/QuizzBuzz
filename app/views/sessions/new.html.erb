<div class="d-flex justify-content-center">
  <h2 class="mx-2">Sign In</h2>
</div>


<%= form_for :session, url: sessions_path do |f| %>
  <div class="form-group mx-2">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control w-50" %>
  </div>
  <div class="form-group mx-2">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control w-50" %>
  </div>
  <%= f.submit 'Sign In', class: "btn btn-outline-primary mx-2" %>
<% end %>