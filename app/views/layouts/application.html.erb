<!DOCTYPE html>
<html>
  <head>
    <title>QUIZZ-BUZZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to("QuizzBuzz", root_path, class: "navbar-brand") %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <%= link_to("Quizzes", quizzes_path, class: "nav-link dropdown-toggle",id: "navbarDropdown", data: {toggle: "dropdown"}, role: "button", aria:{haspopup: "true", expanded: "false"} )%> 
             <div class=" dropdown">
              <div class="dropdown-menu">
                <%= link_to("All Quizzes", quizzes_path, class: "dropdown-item")%>
                <% if user_signed_in? %>
                  <%= link_to("My Taken Quizzes", quizzes_path, class: "dropdown-item")%>
                  <%= link_to("My Created Quizzes", quizzes_path, class: "dropdown-item")%>
                  <%= link_to("Create New Quiz", new_quiz_path, class: "dropdown-item")%>
                <% end %>
              </div>
             </div>
            </li>
            <li class="nav-item">
              <%= link_to("Leaderboard", leaderboard_path, class: "nav-link") %>
            </li>
          </ul>  
          <% if user_signed_in? %>       
            <div class="navbar-nav ml-auto d-flex">         
              <%= link_to("Hello #{current_user.first_name}", user_path(current_user), class: "nav-link") %>
              <%= link_to("Log out", sessions_path, method: :delete, class: "nav-link")%>
            </div>
          <% else %>
            <div class="navbar-nav ml-auto d-flex">  
              <%= link_to("Log in", new_sessions_path, class: "nav-link")%>
              <%= link_to("Sign up", new_user_path, class: "nav-link")%>
            </div>
          <% end %>          
        </div>
      </nav>
    </header>


      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

    <main class= "m-4">
      <%= yield %>
    </main> 
    
  </body>
</html>
