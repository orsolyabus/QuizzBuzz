<!DOCTYPE html>
<html>
  <head>
    <title>QUIZZ-BUZZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
    <!--<nav class="navbar navbar-expand navbar-light bg-light">
        <div class="navbar-collapse collapse w-100 d-flex justify-content-begin">

        </div>
        -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <%= link_to("QuizzBuzz", root_path, class: "navbar-brand") %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse d-flex" id="navbarToggler">
          <div class=" dropdown">
            <%= link_to("Quizzezz", quizzes_path, class: "nav-link active dropdown-toggle", data: {toggle: "dropdown"}) %>
            <div class="dropdown-menu">
              <%= link_to("All Quizzezz", quizzes_path, class: "dropdown-item")%>
              <% if user_signed_in? %>
                <%= link_to("My Taken Quizzezz", quizzes_path, class: "dropdown-item")%>
                <%= link_to("My Created Quizzezz", quizzes_path, class: "dropdown-item")%>
                <%= link_to("Create New Quiz", new_quiz_path, class: "dropdown-item")%>
              <% end %>
            </div>
          </div>
          <div class="ml-auto">
            <div class="row">
              <% if user_signed_in? %>
                <span class="navbar-text">Hello <%= current_user.first_name %></span>
                <%= link_to("Log out", sessions_path, method: :delete, class: "nav-link")%>
              <% else %>
                <%= link_to("Log in", new_sessions_path, class: "nav-link")%>
                <%= link_to("Sign up", new_user_path, class: "nav-link")%>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

    <main class= "m-4">
      <%= yield %>
    </main> 
    
  </body>
</html>
