<div class="container-fluid">  
  <h1>Quizzes</h1>
  <div class ="d-flex flex-wrap ">
  
    <% @quizzes.each do |q| %>
      <div class="card mb-2 mr-2" style="max-width: 18rem;">
        <div class="card-header">
          <h5 class="card-title"><%= link_to q.title.slice(0, 50), quiz_path(q) %></h5>
        </div>
        <div class="card-body">          
          <p class="card-text"><%= q.description.slice(0, 100)%>...</p>        
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

