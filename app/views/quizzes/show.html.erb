<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @quiz.title %></h1>
    <p class="card-text"><%= @quiz.description %></p>
    <p class="card-text">By: <%= @quiz.user.nickname %></p>
    <% if can? :crud, @quiz %>
      <div class="form-group">
        <%= link_to('Edit Quiz', edit_quiz_path(@quiz), class: "btn btn-outline-primary")%>
      </div>
    <% end %>
    <form action="/quizzes/<%= @quiz.id %>/results" method="POST">
      <% @quiz.questions.each do |q| %>
      <div class="d-flex justify-content-center" style="width: 100%; height: 50%;">
        <div class="card shadow mb-4" style="width: 65%">
          <div class="card-body m-0form-group" id='answer-options'>
            <h5 class="card-text"><%= q.question %></h5>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">          
            <div class="form-row px-5">
              <input class="form-check-input" type="radio" id="opt0" name='<%= q.id %>' required value=0>
              <label class="form-check-label" for="opt0"><%= q.option0 %></label>
            </div>
            <div class="form-row px-5">
              <input class="form-check-input" type="radio" id="opt1" name='<%= q.id %>' value=1>
              <label class="form-check-label" for="opt1"><%= q.option1 %></label>
            </div>
            <div class="form-row px-5">
              <input class="form-check-input" type="radio" id="opt2" name='<%= q.id %>' value=2'>
              <label class="form-check-label" for="opt2"><%= q.option2 %></label>
            </div>
            <div class="form-row px-5">
              <input class="form-check-input" type="radio" id="opt3" name='<%= q.id %>' value=3'>
              <label class="form-check-label" for="opt3"><%= q.option3 %></label>
            </div>
            <% if can? :crud, @quiz %>
              <div class="mt-2">
                <%= link_to('Edit', edit_quiz_question_path(@quiz, q), class: "btn btn-outline-primary")%>
              </div>
            <% end %>  
          </div>
        </div>
      </div>
      <% end %>
      <% if can? :take, @quiz %>
          <div class="mb-4 d-flex justify-content-center" style="width: 100%; height: 50%;">
            <input type="submit" value='Submit Answers' class='btn btn-primary'>
          </div>
      <% end %>
    </form>
    <% if can? :crud, @quiz %>
      <%= link_to 'Add Questions', new_quiz_question_path(@quiz.id), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
