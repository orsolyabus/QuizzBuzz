<div class="row d-flex justify-content-center">
  <div class="col-xl-6 col-lg-9 col-md-11">
    <%= form_for(@quiz) do |f|%>
  
      <div class="form-group mx-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control ", maxlength:"60" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", maxlength:"300"%>
      </div>
      <div class="d-flex">
        <div>
          <%= f.submit "Save", class: "btn btn-primary m-2" %>
        <% if @quiz.persisted?%>
          <%= link_to("Cancel",  quiz_path(@quiz), class: "btn btn-secondary m-2")%>
        <% end %>
        </div>
        <% if @quiz.persisted? %>
          <div class="ml-auto">
            <%= link_to('Delete', quiz_path(@quiz), method: :delete, class: " m-2 btn btn-info", data: {confirm: "Are you sure?"}) %>
          </div>
        <% end %>
      </div>     
    </div>
  <% end %>
</div>
</div>
