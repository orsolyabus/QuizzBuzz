<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_for(@quiz) do |f|%>
      <% if @quiz.errors.present? %>
      <p> 
        <%= @quiz.errors.full_messages.join(',') %>
      </p>
      <% end %>
  
      <div class="form-group mx-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control " %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control " %>
      </div>
      <div class="d-flex">
        <div>
          <%= f.submit "Save", class: "btn btn-primary m-2" %>
          <%= link_to("Cancel", quizzes_path, class: "btn btn-secondary m-2")%>
        </div>
        <div class="ml-auto">
          <%= link_to('Delete', quiz_path(@quiz), method: :delete, class: " m-2 btn btn-info", data: {confirm: "Are you sure?"}) %>
        </div>
      </div>
     
    </div>

  </div>
  
<% end %>
