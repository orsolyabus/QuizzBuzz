<%= form_for(@quiz) do |f|%>
  <% if @quiz.errors.present? %>
  <p> 
    <%= @quiz.errors.full_messages.join(',') %>
  </p>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
<% end %>
