
<div class="mx-2">
<h3> Welcome <%= @user.nickname.titleize %>!</h3>
<br>
    <button type="button" class="btn btn-primary">
    Quizzes completed <span class="badge badge-light"> <%=@total_taken_quizzes%></span>
    </button>

    <button type="button" class="btn btn-secondary">
    Quizzes created <span class="badge badge-light"><%=@total_created_quizzes %></span>
    </button>

    <button type="button" class="btn btn-info">
    Total points <span class="badge badge-light"><%= @total_score %> </span>
    </button>
</div>

<br>
<div class="mx-2">
<%= link_to('Edit Profile', edit_user_path(@user), class: "btn btn-outline-primary")%>
<%= link_to('Delete Account', user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-primary") %>
</div>

