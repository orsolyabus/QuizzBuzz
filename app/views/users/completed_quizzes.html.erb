
<main class="mx-4">

<% if  @completed_quiz == [] %>
  <h2> You haven't completed any quizzes yet...</h2>
  <%= link_to('See quizzes', quizzes_path, class: "btn btn-outline-primary") %>
<% else %>

<h2> Your completed quizzes </h2>

  <div class="container">  
    <div class ="row justify-content-md-center">
      <% @completed_quiz.each do |q| %>
        <div class="col-lg-4 col-sm-12 col-md-6" id=<%= q.id %>>
          <div class="card m-2 container-fluid p-0">
            <div class="card-header">
              <h5 class="card-title"><%= link_to q.title.slice(0, 50), quiz_path(q) %></h5>
            </div>
            <div class="card-body">          
              <p class="card-text"><%= q.description.slice(0, 100)%>...</p>  
              <small class="text-muted">Score: <%= @quizzes_scores.find_by(quiz_id: q.id).score %></small>      
            </div>
          </div>
        </div>    
      <% end %>
    </div>
      <%= link_to('Take more quizzes', quizzes_path, class: "btn btn-outline-primary") %>
  </div>    
<% end %>
</main>
