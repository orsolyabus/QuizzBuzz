
<main class="mx-4">
<span><b>Total score: <%= @current_user_total_score %></b></span> 

<div>
  <% if @completed_quiz == [] %>
  <%= image_tag "sad_bee.png" %>
    <p>Your quiz list is so sad and lonely, why don't you take a quiz now?</p>
    <button class="btn btn-primary">
      Take a quiz
    </button>
  <% end %>
</div>
  <div class="container">  
    <div class ="row justify-content-md-center">
      <% @completed_quiz.each do |q| %>
        <div class="col-lg-4 col-sm-12 col-md-6" id=<%= q.id %>>
          <div class="card m-2 container-fluid p-0">
            <div class="card-header">
              <h5 class="card-title"><%= link_to q.title.slice(0, 50), quiz_path(q) %></h5>
            </div>
            <div class="card-body">          
              <p class="card-text"><%= q.description.slice(0, 100)%>...</p>  
              <small class="text-muted">Score: <%= @taken_quizzes.find_by(quiz_id: q.id).score %></small>      
            </div>
          </div>
        </div>    
      <% end %>
    </div>
      <%= link_to('Take more quizzes', quizzes_path, class: "btn btn-outline-primary") %>
  </div>    
<% end %>
</main>
