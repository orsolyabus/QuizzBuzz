
<main class="mx-4"> 

<div>
  <% if @created_quiz == [] %>
  <%= image_tag "sad_bee.png" %>
    <p>You haven't created any quizzes. Your list is so sad and lonely, why don't you make a new one?</p>
    <button class="btn btn-primary">
      Create a new quiz
    </button>
  <% end %>
</div>
  <div class="container">  
    <div class ="row justify-content-md-center">
      <% @created_quiz.each do |q| %>
        <div class="col-lg-4 col-sm-12 col-md-6">
          <div class="card m-2 container-fluid p-0">
            <div class="card-header">
              <h5 class="card-title"><%= link_to q.title.slice(0, 50), quiz_path(q) %></h5>
            </div>
            <div class="card-body"> 
   <%# TIMES TAKEN AND HIGHEST SCORE NOT IMPLEMENTED YET %>             
              <p class="card-text">Times taken: </p>  
              <p class="card-text">Highest score: </p>  
            </div>
          </div>
        </div>    
      <% end %>
    </div>
  <%= link_to('Create New Quiz', new_quiz_path, class: "btn btn-outline-primary") %>
  </div>   
<% end %> 
</main>
