<%= form_for @user do |f| %>
    <div class="form-group mx-2">
        <%= f.label :nickname, "Username*" %>
        <%= f.text_field :nickname, class: "form-control w-50"%>
    </div>

    <div class="form-group mx-2">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, class: "form-control w-50" %>
    </div>

    <div class="form-group mx-2">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, class: "form-control w-50" %>
    </div>

    <%= f.submit 'Update', class: "btn btn-outline-primary" %>
<% end %>