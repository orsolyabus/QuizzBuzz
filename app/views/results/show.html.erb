<% if can?(:crud, @result) %>
  <% if @result.user == current_user %>
    <h1>Result</h1>
    <p>Your Result: <%= @result.score %>/<%= @max_score %></p>
    <p><%= ((@result.score.to_f/@max_score.to_f) * 100).round(2) %>%</p>
    <p>Points Earned: <%=@result.score%></p>
    <p>Total Points: <%=@leaderboard_score%></p>
  <% else %>
    <% flash.now[:danger] = "You cannot view this page!" %>
  <% end %>
<% else %>
  <% flash.now[:danger] = "You cannot view this page!" %>
<% end %>