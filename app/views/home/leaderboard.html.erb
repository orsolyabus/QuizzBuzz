<%# ROUTE IS "/leaderboard" or leaderboard_path %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Rank</th>
          <th scope="col">Nickname</th>
          <th scope="col">Total Points </th>
        </tr>
      </thead>
    
      <tr>
        <th scope="row"> 
        <i style="color: gold;" class="fas fa-trophy"></i>
        </th>
        <td><%= @lb_results.first[0] %></td>
        <td><%= @lb_results.first[1] %>
     </tr>

      <tr>
        <th scope="row"> 
        <i style="color: silver;" class="fas fa-trophy"></i>
        </th>
        <td><%= @lb_results.keys[1]%></td>
        <td><%= @lb_results.values[1]%>
     </tr>

     <tr>
        <th scope="row">  
        <i style="color: bronze;" class="fas fa-trophy"></i>
        </th>
        <td><%= @lb_results.keys[2] %></td>
        <td><%= @lb_results.values[2]%>
     </tr>

      <% @index=4%>
      <% @lb_results.drop(3).each do |user, total_score| %>
        <tr>
          <th scope="row"> <%= @index%> </th>
          <td><%= user %></td>
          <td><%= total_score %>
        </tr>
        <% @index +=1 %>
      <% end %>
      <tbody>

    
  
      
        