<%= form_for([@quiz, @question]) do |form| %>
    <div class="form-group">
        <%= form.label :question%> <br>
        <%= form.text_field :question, class: "form-control" %> 
    </div>
    <div class="form-group">
        <%= form.label :option0%> <br>
        <%= form.text_field :option0, class: "form-control" %> 
    </div>
    <div class="form-group">
        <%= form.label :option1%> <br>
        <%= form.text_field :option1, class: "form-control" %> 
    </div>
    <div class="form-group">
        <%= form.label :option2%> <br>
        <%= form.text_field :option2, class: "form-control" %> 
    </div>
    <div class="form-group">
        <%= form.label :option3%> <br>
        <%= form.text_field :option3, class: "form-control" %> 
    </div>
    <div class="form-group">
        <%= form.label :correct_answer%> <br>
        <%= form.radio_button :correct_answer, 0, class: "form-control" %> A 
        <%= form.radio_button :correct_answer, 1, class: "form-control" %> B 
        <%= form.radio_button :correct_answer, 2, class: "form-control" %> C 
        <%= form.radio_button :correct_answer, 3, class: "form-control" %> D 
    </div>
    <div class="form-group">
        <%= form.submit class:"btn btn-outline-primary" %>
    </div>

<% end %>