<%= form_for([@quiz, @question]) do |form| %>
    <div class="form-group">
        <%= form.label :question%> <br>
        <%= form.text_area :question, class: "form-control", maxlength:"300" %> 
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-2">
        <label >Correct Answer</label>
        <div class="form-check">
        <%= form.radio_button :correct_answer, 0, class: "form-check-input", id: "A" %>
            <label class="form-check-label" for="A">A</label>
        </div>
        </div>
        <div class="form-group col-md">
        <label for="inputPassword4">Answers</label>
        <%= form.text_field :option0, class: "form-control", maxlength:"100" %> 
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
        <div class="form-check">
        <%= form.radio_button :correct_answer, 1, class: "form-check-input", id: "A" %>
            <label class="form-check-label" for="A">B</label>
        </div>
        </div>
        <div class="form-group col-md">
        <%= form.text_field :option1, class: "form-control", maxlength:"100" %> 
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
        <div class="form-check">
        <%= form.radio_button :correct_answer, 2, class: "form-check-input", id: "A" %>
            <label class="form-check-label" for="A">B</label>
        </div>
        </div>
        <div class="form-group col-md">
        <%= form.text_field :option2, class: "form-control", maxlength:"100" %> 
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
        <div class="form-check">
        <%= form.radio_button :correct_answer, 3, class: "form-check-input", id: "A" %>
            <label class="form-check-label" for="A">B</label>
        </div>
        </div>
        <div class="form-group col-md">
        <%= form.text_field :option3, class: "form-control", maxlength:"100" %> 
        </div>
    </div>

    <div class="form-group">
        <%= form.submit class:"btn btn-outline-primary" %>
    </div>

<% end %>
